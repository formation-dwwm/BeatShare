<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Beatshare{% endblock %}</title>

        {% block stylesheets %}
            
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Bootstrap core CSS -->
            <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
            <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.7/css/mdb.min.css" rel="stylesheet">
            
            <link rel="icon" href="images/LogoTete.ico">

            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body style="background-color: #e0e0e0;">
        <nav class="navbar">

            <!-- Navbar brand -->
            <a class="navbar-brand d-flex justify-content-center align-items-center" href="{{ path('beatshare') }}"><img src="images/LogoTete.png" width="64px">BeatShare</a>

            <!-- Collapse button -->
            <button class="navbar-toggler third-button" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent22" aria-controls="navbarSupportedContent22" aria-expanded="false"
                aria-label="Toggle navigation">
                <div class="animated-icon3"><span></span><span></span><span></span></div>
            </button>

            <!-- Collapsible content -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent22">

                <!-- Links -->
                <ul class="navbar-nav ml-auto float-right">

                    {% if app.user %}
                    <li class="nav-item active">
                       <a class="btn btn-outline-blue-grey waves-effect w-100" href="{{ path('add') }}">Publier un beat</a>
                    </li>
                    {% endif %}  

                    {% if not app.user %}
                    <li class="nav-item">
                        <a class="btn btn-blue-grey w-100" href="{{ path('security_login') }}">Connexion</a>
                    </li>

                    <li class="nav-item">
                        <a class="btn btn-outline-blue-grey waves-effect w-100" href="{{ path('security_registration') }}">S'inscrire</a>
                    </li>

                    {% else %}
                    <li class="nav-item">
                        <a class="btn btn-outline-danger waves-effect w-100"  href="{{ path('security_logout') }}">DÃ©connexion</a>
                    </li>
                    {% endif %}

                </ul>
                <!-- Links -->

            </div>
            <!-- Collapsible content -->

        </nav>

        {% block body %}{% endblock %}
        

        {% block javascripts %}
            <script type="text/javascript" src="js/jquery-3.4.1.min.js"></script>
            <!-- Bootstrap tooltips -->
            <script type="text/javascript" src="js/popper.min.js"></script>
            <!-- Bootstrap core JavaScript -->
            <script type="text/javascript" src="js/bootstrap.min.js"></script>
            <!-- MDB core JavaScript -->
            <script type="text/javascript" src="js/mdb.min.js"></script>

            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
